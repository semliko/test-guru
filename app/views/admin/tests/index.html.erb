<p id="notice"><%= notice %></p>

<h1><%= t('.header') %></h1>

<table class="table">
  <tr>
    <th class="sort-by-title pointer">
      Title
      <%= octicon 'arrow-up', class: 'text-success hide' %>
      <%= octicon 'arrow-down', class: 'text-success hide' %>
    </th>
  </tr>

  <tbody>
    <% @tests.each do |test| %>
      <tr>
        <td><%= test.category.title %></td>
        <td><%= test.title %></td>
        <td>Questions <%= test.questions.count %></td>
        <td><%= link_to 'Show', admin_test_path(test) %></td>
        <td><%= link_to 'Edit', edit_admin_test_path(test) %></td>
        <td><%= link_to 'Destroy', admin_test_path(test), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Test', new_admin_test_path %>
